<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Validar Documentos</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f7f7f7;
        }
        header {
            background-color: #90c9a7;
            color: #fff;
            padding: 20px;
            text-align: center;
        }
        main {
            padding: 20px;
        }
        h1, h2 {
            color: #413d4b;
        }
        .employee-section, .document-section {
            background-color: #fff;
            padding: 20px;
            margin: 20px 0;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .document-link {
            color: #90c9a7;
            text-decoration: none;
            font-weight: bold;
        }
        .document-link:hover {
            text-decoration: underline;
        }
        label {
            display: block;
            margin: 10px 0;
        }
        button {
            background-color: #90c9a7;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
        }
        button:hover {
            background-color: #76b090;
        }
        .hidden {
            display: none;
        }
    </style>
    <script>
        function showDocuments(usuario) {
            const sections = document.querySelectorAll('.document-section');
            sections.forEach(section => {
                if (section.dataset.usuario === usuario) {
                    section.classList.remove('hidden');
                } else {
                    section.classList.add('hidden');
                }
            });
        }
    </script>
</head>
<body>

    <header>
        <h1>Validar Documentos de Empleados</h1>
    </header>

    <main>
        <div class="employee-section">
            <h2>Lista de Empleados</h2>
            <ul>
                {{#each documentos}}
                <li><a href="javascript:void(0)" onclick="showDocuments('{{this.usuario}}')">{{this.usuario}}</a></li>
                {{/each}}
            </ul>
        </div>

<form action="/validardocumentos" method="post">
    {{#each documentos}}
    <div class="document-section hidden" data-usuario="{{this.usuario}}">
        <h2>Empleado: {{this.usuario}}</h2>
        {{#if (not this.cedula_validado)}}
        <p>Cédula: <a class="document-link" href="{{this.cedula_path}}" target="_blank">Ver Documento</a></p>
        <label>
            Validado:
            <input type="radio" name="{{this.usuario}}_cedula" value="si"> Sí
            <input type="radio" name="{{this.usuario}}_cedula" value="no"> No
        </label>
        {{/if}}
