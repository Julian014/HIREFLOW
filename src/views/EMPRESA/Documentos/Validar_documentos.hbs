<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Validar Documentos</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            background-color: #f7f7f7;
        }

        header {
            background-color: rgb(73, 57, 113);
            color: #fff;
            padding: 20px;
            text-align: center;
            font-size: 24px;
            font-weight: bold;
        }

        main {
            padding: 20px;
        }

        h1,
        h2 {
            color: rgb(43, 58, 103);
        }

        .section {
            background-color: #fff;
            padding: 20px;
            margin: 20px 0;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .document-link {
            color: rgb(73, 57, 113);
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s ease;
        }

        .document-link:hover {
            color: rgb(43, 58, 103);
            text-decoration: underline;
        }

        .document-card {
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 10px;
            margin: 10px 0;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: transform 0.3s ease;
        }

        .document-card:hover {
            transform: translateY(-5px);
        }

        .document-card p {
            margin: 0;
            flex: 1;
            color: rgb(43, 58, 103);
        }

        .document-card label {
            margin: 0 10px;
        }

        .validation-options {
            display: flex;
            justify-content: flex-end;
            flex: 0 0 150px;
        }

        .validation-options label {
            margin: 0 10px;
            white-space: nowrap;
        }

        button {
            background-color: rgb(43, 58, 103);
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        button:hover {
            background-color: rgb(73, 57, 113);
            transform: translateY(-3px);
        }

        .hidden {
            display: none;
        }

        select,
        .search-box {
            width: 100%;
            padding: 10px;
            margin: 20px 0;
            border-radius: 4px;
            border: 1px solid #ccc;
            transition: border-color 0.3s ease;
        }

        select:focus,
        .search-box:focus {
            border-color: rgb(43, 58, 103);
        }
    </style>
    <script>
        function mostrarDocumentos() {
            const usuario = document.getElementById('empleados').value;
            const secciones = document.querySelectorAll('.document-section');
            secciones.forEach(seccion => {
                seccion.classList.toggle('hidden', seccion.dataset.usuario !== usuario);
            });
        }

        function filtrarUsuarios() {
            const filtro = document.getElementById('filtro').value.toLowerCase();
            const opciones = document.querySelectorAll('#empleados option');
            opciones.forEach(opcion => {
                const texto = opcion.textContent.toLowerCase();
                opcion.style.display = texto.includes(filtro) ? '' : 'none';
            });
        }

        function mostrarRazon(input, usuario, documento) {
            const razonField = document.getElementById(`razon_${usuario}_${documento}`);
            if (input.value === 'no') {
                razonField.classList.remove('hidden');
                razonField.required = true;
            } else {
                razonField.classList.add('hidden');
                razonField.required = false;
            }
        }
    </script>
</head>

<body>

    <header>
