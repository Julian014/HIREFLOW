            padding: 30px;
            max-width: 900px;
            width: 100%;
        }
        h1 {
            font-size: 28px;
            color: #90c9a7;
            text-align: center;
            margin-bottom: 20px;
            font-family: 'Segoe UI Semibold', Tahoma, Geneva, Verdana, sans-serif;
        }
        .form-group {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 20px;
        }
        .form-group label {
            font-weight: 600;
            margin-bottom: 5px;
        }
        .form-group input[type="file"] {
            display: none;
        }
        .form-group .file-label {
            display: block;
            width: 100%;
            padding: 10px;
            border: 2px solid #90c9a7;
            border-radius: 5px;
            text-align: center;
            cursor: pointer;
            transition: background-color 0.3s, border-color 0.3s;
        }
        .form-group .file-label:hover {
            background-color: #f0f4f8;
            border-color: #79b890;
        }
        .form-group input[type="file"]:disabled + .file-label {
            background-color: #e9e9e9;
            cursor: not-allowed;
        }
        .disabled-message {
            grid-column: span 2;
            color: #e74c3c;
            font-size: 14px;
            text-align: center;
            margin-top: -10px;
        }
        .drop-zone {
            border: 2px dashed #90c9a7;
            border-radius: 5px;
            padding: 10px;
            text-align: center;
            color: #90c9a7;
            transition: background-color 0.3s;
            margin-top: 5px;
        }
        .drop-zone.dragover {
            background-color: #f0f4f8;
        }
        .drop-zone p {
            margin: 0;
            font-size: 14px;
        }
        .file-name-container {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-top: 10px;
            font-size: 14px;
            color: #413d4b;
            display: none;
        }
        .file-name {
            flex-grow: 1;
        }
        .remove-file {
            background: #e74c3c;
            color: #fff;
            border: none;
            border-radius: 50%;
            cursor: pointer;
            font-size: 14px;
            width: 24px;
            height: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-left: 10px;
            transition: background 0.3s;
        }
        .remove-file:hover {
            background: #c0392b;
        }
        button {
            background-color: #90c9a7;
            color: #fff;
            padding: 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 18px;
            width: 100%;
            transition: background-color 0.3s;
        }
        button:hover {
